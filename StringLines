class Solution
{
    static void Main(string[] args)
    {
        string line1 = Console.ReadLine();
        string line2 = Console.ReadLine();

     int replacedChars = 0;

        for (int i = 0; i < line1.Length; i++)
        {
            if (line1[i] != line2[line2.Length - 1 - i])
            {
                replacedChars++;
            }
        }
